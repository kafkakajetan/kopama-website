generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  STUDENT
  INSTRUCTOR
  ADMIN
}

enum EnrollmentStatus {
  DRAFT
  PAYMENT_PENDING
  PAID
  CANCELED
}

enum PaymentStatus {
  REGISTERED
  SUCCESS
  REJECTED
  CANCELED
  ERROR
}

enum ContractStatus {
  NOT_GENERATED
  GENERATED
  DOWNLOADED
  MANUAL_DELIVERY_PENDING
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  phone        String?
  passwordHash String?
  role         UserRole @default(STUDENT)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model CourseCategory {
  id          String       @id @default(cuid())
  code        String       @unique
  name        String
  enrollments Enrollment[]
  offerItems  OfferItem[]
}

model Enrollment {
  id     String           @id @default(cuid())
  status EnrollmentStatus @default(DRAFT)

  firstName String
  lastName  String
  email     String
  phone     String
  pesel     String

  addressLine1 String
  addressLine2 String?
  city         String
  postalCode   String

  acceptedTermsAt   DateTime
  acceptedPrivacyAt DateTime
  acceptedIp        String?

  courseCategoryId String
  courseCategory   CourseCategory @relation(fields: [courseCategoryId], references: [id])

  payment  PaymentTransaction?
  contract ContractDocument?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([email])
  @@index([status])
}

model PaymentTransaction {
  id           String     @id @default(cuid())
  enrollmentId String     @unique
  enrollment   Enrollment @relation(fields: [enrollmentId], references: [id])

  status       PaymentStatus @default(REGISTERED)
  amountGrosze Int
  currency     String        @default("PLN")

  p24SessionId String? @unique
  p24OrderId   String? @unique

  lastWebhookAt DateTime?
  rawPayload    Json?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([status])
}

model ContractDocument {
  id           String     @id @default(cuid())
  enrollmentId String     @unique
  enrollment   Enrollment @relation(fields: [enrollmentId], references: [id])

  status      ContractStatus @default(NOT_GENERATED)
  templateVer String         @default("v1")

  storageKey  String
  fileHash    String?
  generatedAt DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum OfferType {
  COURSE
  EXTRA_HOUR
  EXAM_CAR
  TRAINING_PACKAGE
  OTHER
}

enum OfferUnit {
  PACKAGE
  HOUR
  SERVICE
}

enum CustomerType {
  PUBLIC
  KOPAMA_STUDENT
}

model OfferItem {
  id       String    @id @default(cuid())
  code     String    @unique
  name     String
  type     OfferType
  unit     OfferUnit
  isActive Boolean   @default(true)

  // opcjonalnie: jeśli usługa dotyczy konkretnej kategorii
  courseCategoryId String?
  courseCategory   CourseCategory? @relation(fields: [courseCategoryId], references: [id])

  priceRules PriceRule[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PriceRule {
  id          String    @id @default(cuid())
  offerItemId String
  offerItem   OfferItem @relation(fields: [offerItemId], references: [id])

  customerType CustomerType
  priceZloty   Decimal      @db.Decimal(10, 2)
  currency     String       @default("PLN")

  validFrom DateTime?
  validTo   DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([offerItemId, customerType, validFrom, validTo])
  @@index([offerItemId])
}
